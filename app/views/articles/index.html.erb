<div class="index-box">
<h2 class="mainarea-title">Articles</h2>

  <% @articles.each do |article| %>
    <div class="card">
      <div class="card-header">
        <%= "##{article.category.name}, ##{article.language.name}" %>
      </div>
      <div class="card-body">
        <h4 class="card-title"><%= "#{article.title}" %></h4>
        <p class="card-text"><%= "#{article.created_at} by #{article.user.username}" %></p>
        <span class="btn btn-light"><%= link_to "Detail",article_path(article.id) %></span>
      </div>
    </div>
  <% end %>
  
</div>
